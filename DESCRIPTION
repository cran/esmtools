Package: esmtools
Title: Preprocessing Experience Sampling Method (ESM) Data
Version: 1.0.0
Authors@R: c(
    person("Jordan", "Revol", , "jordan.revol@kuleuven.be", role = c("aut", "cre", "cph"),
           comment = c(ORCID = "https://orcid.org/0000-0001-5511-3617")),
